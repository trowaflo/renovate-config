{
  "regexManagers": [
    {
      "fileMatch": [
        "^ansible\/group_vars\/.*\\.yml",
        "^vars\/main\\.yml"
      ],
      "matchStrings": [
        "repoName:\\s+(?<depName>.*)\\s+tag:\\s+(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["ansible-galaxy"],
      "matchUpdateTypes": ["patch", "minor"],
      "labels": ["ansible-galaxy", "automerge"],
      "groupName": "AUTOMERGE - Ansible Galaxy Patch and Minor Updates",
      "semanticCommits": "enabled",
      "commitMessagePrefix": "chore(ansible-galaxy)",
      // "automerge": true
    },
    {
      "matchManagers": ["ansible-galaxy"],
      "matchUpdateTypes": ["major"],
      "labels": ["ansible-galaxy", "breaking"],
      "groupName": "BREAKING - Ansible Galaxy Major Updates",
      "semanticCommits": "enabled",
      "semanticCommitType": "feat",
      "semanticCommitScope": "ansible-galaxy",
      "automerge": false
    }
  ]
}
