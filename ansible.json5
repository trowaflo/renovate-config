{
  "regexManagers": [
    {
      "fileMatch": [
        "^ansible\/group_vars\/.*\\.yml",
        "^vars\/main\\.yml"
      ],
      "matchStrings": [
        "repoName:\\s+(?<depName>.*)\\s+tag:\\s+(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    // Ansible Galaxy Patch and Minor Updates
    {
      "matchManagers": ["ansible-galaxy"],
      "matchUpdateTypes": ["patch", "minor"],
      "labels": ["ansible-galaxy", "automerge"],
      "groupName": "AUTOMERGE - Ansible Galaxy Patch and Minor Updates",
      "commitMessageAction": "chore(ansible-galaxy):",
      "commitMessageTopic": "{{depName}}",
      "automerge": true
    },
    // Ansible Galaxy Major Updates
    {
      "matchManagers": ["ansible-galaxy"],
      "matchUpdateTypes": ["major"],
      "labels": ["ansible-galaxy", "breaking"],
      "groupName": "BREAKING - Ansible Galaxy Major Updates",
      "commitMessageAction": "chore(ansible-galaxy)!:",
      "commitMessageTopic": "{{depName}}",
      "automerge": false
    },
    //
    {
      "matchManagers": ["regex"],
      "matchUpdateTypes": ["patch", "minor"],
      "matchdatasources": ["github-releases"],
      "matchfilepaths": [
        "^ansible\/group_vars\/.*\\.yml",
        "^vars\\/main\\.yml"
      ],
      "labels": ["automerge"],
      "groupName": "AUTOMERGE - Ansible vars Patch and Minor Updates",
      "commitMessageAction": "chore(ansible-vars):",
      "commitMessageTopic": "{{depName}}",
      "automerge": true
    },
    {
      "matchManagers": ["regex"],
      "matchUpdateTypes": ["major"],
      "matchdatasources": ["github-releases"],
      "matchfilepaths": [
        "^ansible\/group_vars\/.*\\.yml",
        "^vars\\/main\\.yml"
      ],
      "labels": ["automerge"],
      "groupName": "BREAKING - Ansible vars Major Updates",
      "commitMessageAction": "chore(ansible-vars)!:",
      "commitMessageTopic": "{{depName}}",
      "automerge": false
    }
  ]
}
