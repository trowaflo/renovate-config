{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "github>trowaflo/renovate:git-ops.json5"
  ],
  "onboardingRebaseCheckbox": true,
  "onboardingConfig": { 
    "extends": [
      "github>trowaflo/renovate"
    ] 
  },

  "pre-commit": {
    "enabled": true
  },

  "reviewers": ["trowaflo"],
  "packageRules": [
    {
      "groupName": "all minor",
      "matchUpdateTypes": ["minor","patch"]
    },
    {
      "groupName": "all major",
      "matchUpdateTypes": ["major"]
    }
  ]
}
