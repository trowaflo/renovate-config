{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "local>trowaflo/renovate-config:ansible.json5",
    "local>trowaflo/renovate-config:git-ops.json5",
    "local>trowaflo/renovate-config:ci.json5",
    "local>trowaflo/renovate-config:no_category.json5"
  ],
  "reviewers": ["trowaflo"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Minor and Patch Updates"
    },
    {
      "matchUpdateTypes": ["major"],
      "labels": ["major"],
      "automerge": false
    }
  ]
}
