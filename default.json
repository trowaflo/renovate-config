{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    "github>trowaflo/renovate:git-ops.json5"
  ],

  "pre-commit": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchPackageNames": ["ansible/ansible-lint"],
      "matchManagers": ["pre-commit"],
      "labels": ["pre-commit", "ansible-lint"]
    }
  ]
}
