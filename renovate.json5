{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "regexManagers": [
    {
      "fileMatch": ["^[^\/\\s]+\/[^\/\\s]+\/description\\.yaml"],
      "matchStrings": ["ccm:\\s+repoURL:\\s+(?<registryUrl>.*)\\s+targetRevision:\\s+(?<currentValue>.*)\\s+chart:\\s+(?<depName>.*)"],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": [
        "^ansible\/group_vars\/.*\\.yml",
        "^vars\/main\\.yml"
      ],
      "matchStrings": [
        "repoName:\\s+(?<depName>.*)\\s+tag:\\s+(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "packageRules": [
    {
      "groupName": "all patch",
      "matchUpdateTypes": ["patch"]
    },
    {
      "groupName": "all minor",
      "matchUpdateTypes": ["minor"]
    },
    {
      "groupName": "all major",
      "matchUpdateTypes": ["major"]
    }
  ]
}
