{
  "kubernetes": {
    "fileMatch": ["deployment\\.ya?ml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["(^|.*\/)(description\\.yaml)$"],
      "matchStrings": ["ccm:\\s+repoURL:\\s+(?<registryUrl>.*)\\s+targetRevision:\\s+(?<currentValue>.*)\\s+chart:\\s+(?<depName>.*)"],
      "datasourceTemplate": "helm"
    },
    {
      "fileMatch": [
        "^ansible\/group_vars\/.*\\.yml",
        "^vars\/main\\.yml"
      ],
      "matchStrings": [
        "repoName:\\s+(?<depName>.*)\\s+tag:\\s+(?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases"
    }
  ],
  "reviewers": ["trowaflo"],
  "packageRules": [
    {
      "groupName": "all patch",
      "matchUpdateTypes": ["patch"]
    },
    {
      "groupName": "all minor",
      "matchUpdateTypes": ["minor"]
    },
    {
      "groupName": "all major",
      "matchUpdateTypes": ["major"]
    }
  ]
}
